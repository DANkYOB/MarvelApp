<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_marvel_image"
    android:orientation="vertical">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="66dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/image_series"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginLeft="26dp"
                        android:layout_marginTop="26dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginBottom="26dp"
                        tools:background="@drawable/ic_iv_thor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/tv_series_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="24sp"
                        android:textColor="#F2EAD3"
                        android:fontFamily="@font/kghappy"
                        android:gravity="center"
                        tools:text="Iron Man"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/image_series"/>


                    <TextView
                        android:id="@+id/tv_description_series"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:paddingStart="16dp"
                        android:textColor="#F2EAD3"
                        android:text="Description"
                        android:fontFamily="@font/kghappy"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_series_name"
                        />


                    <TextView
                        android:id="@+id/tv_description_series_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingBottom="24dp"
                        android:textColor="#F2EAD3"
                        tools:text="Description deatils"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_description_series"
                        />



                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>